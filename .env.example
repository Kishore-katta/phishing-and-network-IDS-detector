# MongoDB Configuration
# For local MongoDB, use: mongodb://localhost:27017
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
MONGO_URI=mongodb://localhost:27017
MONGO_DB=network_ids
MONGO_COLLECTION=history

# Connection settings
MONGO_TIMEOUT_MS=20000

# Storage Mode (summary or per_row)
# 'summary' is faster and groups results by upload
# 'per_row' stores every individual attack prediction
MONGO_STORE_MODE=summary

# UI Settings
HISTORY_LIMIT=200
HISTORY_BACKEND=mongo
